<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_message_dialog"
    android:padding="6dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/c_434343"
        android:textSize="14sp"
        tools:text="标题" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/left"
            android:layout_width="100dp"
            android:layout_height="38.33dp"
            android:layout_marginRight="26.67dp"
            android:background="@drawable/bg_button_dialog_selector"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="@string/sure"/>

        <Button
            android:id="@+id/right"
            android:layout_width="100dp"
            android:layout_height="38.33dp"
            android:background="@drawable/bg_button_dialog_selector"
            android:textColor="@color/white"
            android:textSize="14sp"
            tools:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>