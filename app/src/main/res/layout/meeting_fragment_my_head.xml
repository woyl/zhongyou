<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp45"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/rl_end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/dp8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/inputCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_add" />

        <RelativeLayout
            android:layout_alignEnd="@+id/inputCode"
            android:id="@+id/red_dotone"
            android:layout_width="18pt"
            android:layout_height="18pt"
            android:layout_alignTop="@+id/inputCode"
            android:background="@drawable/message_red_dot"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_search"
        android:layout_width="558pt"
        android:layout_height="64pt"
        android:layout_marginStart="20pt"
        android:visibility="gone"
        android:background="@drawable/input_meeting_name"
        android:gravity="center_vertical"
        android:hint="@string/input_meeting_name"
        android:paddingStart="19pt"
        android:textSize="16sp"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/rl_end"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/dp8"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_notify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_notify" />

        <RelativeLayout
            android:layout_alignEnd="@+id/icon_notify"
            android:id="@+id/red_dot"
            android:layout_width="18pt"
            android:layout_height="18pt"
            android:layout_alignTop="@+id/icon_notify"
            android:background="@drawable/message_red_dot"
            android:visibility="gone" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>