<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/my_px_40"
        android:layout_marginRight="@dimen/my_px_40"
        android:layout_marginTop="@dimen/my_px_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mIvHead"
            android:layout_width="@dimen/my_px_100"
            android:layout_height="@dimen/my_px_100"
            android:layout_gravity="center"
            android:src="@mipmap/baby_default_avatar"

            />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my_px_20"
            android:layout_weight="1">

            <TextView
                android:id="@+id/mTvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京万达店 唐大山"
                android:textColor="@color/purple_811fcd"
                android:textSize="@dimen/my_sp_42" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mTvName"
                android:layout_marginTop="@dimen/my_px_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mTvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray_909090"
                    android:textSize="@dimen/my_sp_36"
                    tools:text="今天 22:00" />


                <TextView
                    android:id="@+id/mTvCallDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my_px_20"
                    android:background="@drawable/review_grey_round_bg_shape"
                    android:drawableLeft="@mipmap/ic_call_time"
                    android:drawablePadding="@dimen/my_px_5"
                    android:gravity="right"
                    android:paddingBottom="@dimen/my_px_5"
                    android:paddingLeft="@dimen/my_px_10"
                    android:paddingRight="@dimen/my_px_10"
                    android:paddingTop="@dimen/my_px_5"
                    android:singleLine="true"
                    android:textColor="@color/text_gray_909090"
                    android:textSize="@dimen/my_sp_30"
                    tools:text="000:32" />


            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/mLayoutStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my_px_20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mIvStar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_star_good_record" />

            <ImageView
                android:id="@+id/mIvStar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_px_5"
                android:src="@mipmap/ic_star_good_record" />

            <ImageView
                android:id="@+id/mIvStar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_px_5"
                android:src="@mipmap/ic_star_good_record" />

            <ImageView
                android:id="@+id/mIvStar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_px_5"
                android:src="@mipmap/ic_star_good_record" />

            <ImageView
                android:id="@+id/mIvStar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_px_5"
                android:src="@mipmap/ic_star_good_record" />


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/mTvReviewContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/my_px_40"
        android:layout_marginRight="@dimen/my_px_40"
        android:layout_marginTop="@dimen/my_px_40"
        android:textColor="@color/text_black_434343"
        android:textSize="@dimen/my_sp_42"
        tools:text="讲得特别好讲得特别好讲得特别好讲得特别好讲得特别好讲得特别好讲得特别好讲得特别好讲得特别好讲得特别好讲得特别好讲得特别好" />

    <ImageView
        android:id="@+id/mIvMeReplyContentArrows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/my_px_141"
        android:layout_marginTop="@dimen/my_px_14"
        android:src="@mipmap/ic_my_reply" />

    <TextView
        android:id="@+id/mTvMeReplyContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/my_px_40"
        android:layout_marginRight="@dimen/my_px_40"
        android:background="@color/bg_gray_e8e8e8"
        android:padding="@dimen/my_px_20"
        android:textColor="@color/text_gray_909090"
        android:textSize="@dimen/my_sp_36"
        android:visibility="visible"
        tools:text="我的回复: " />

    <ImageView
        android:id="@+id/mIvReplyArray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/my_px_141"
        android:src="@mipmap/ic_my_appraise" />

    <TextView
        android:id="@+id/mTvReply"
        android:layout_width="@dimen/my_px_240"
        android:layout_height="@dimen/my_px_100"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/my_px_40"
        android:layout_marginRight="@dimen/my_px_40"
        android:background="@drawable/review_red_round_bg_shape"
        android:gravity="center"
        android:text="回复店员"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <View
        android:id="@+id/mViewDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_px_40"
        android:layout_marginTop="@dimen/my_px_30"
        android:background="@color/bg_gray_e8e8e8" />


</LinearLayout>