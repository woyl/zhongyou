<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/my_px_63"
    android:layout_marginRight="@dimen/my_px_63"
    android:layout_gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/my_px_66"
        android:layout_marginStart="@dimen/my_px_66"
        android:layout_marginTop="@dimen/my_px_52"
        android:layout_marginRight="@dimen/my_px_66"
        android:layout_marginEnd="@dimen/my_px_66"
        android:gravity="center"
        android:lines="1"
        android:text="您的登录信息已过期，请重新登录"
        android:textColor="#FF434343"
        android:textSize="@dimen/my_sp_43"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/my_px_66"
        android:layout_marginLeft="@dimen/my_px_66"
        android:layout_marginTop="@dimen/my_px_96"
        android:layout_marginEnd="@dimen/my_px_66"
        android:layout_marginRight="@dimen/my_px_66"
        android:layout_marginBottom="@dimen/my_px_79"
        android:background="@drawable/bg_button_dialog_selector"
        android:focusable="true"
        android:paddingLeft="@dimen/my_px_86"
        android:paddingRight="@dimen/my_px_86"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/my_sp_43"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">
        <requestFocus />
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>