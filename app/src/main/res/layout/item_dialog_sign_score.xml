<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45pt"
        android:layout_marginTop="20pt"
        android:layout_marginRight="45pt"
        android:paddingTop="20pt"
        android:text="网络是否顺，网络是否顺畅。这个词是由两个希腊词组成的："
        android:textColor="@color/black"
        android:textSize="16sp" />

    <com.willy.ratingbar.ScaleRatingBar
        android:id="@+id/simpleRatingBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30pt"
        android:layout_marginRight="25pt"
        app:srb_clearRatingEnabled="true"
        app:srb_clickable="true"
        app:srb_drawableEmpty="@drawable/sign_score"
        app:srb_drawableFilled="@drawable/sigin_score_light"
        app:srb_isIndicator="false"
        app:srb_minimumStars="0"
        app:srb_numStars="5"
        app:srb_rating="1"
        app:srb_scrollable="true"
        app:srb_starHeight="40pt"
        app:srb_starPadding="15pt"
        app:srb_starWidth="40pt"
        app:srb_stepSize="0.5" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15pt"
        android:background="#eee" />
</LinearLayout>