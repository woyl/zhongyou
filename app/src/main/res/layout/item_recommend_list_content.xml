<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/maker_course_item_five_bg"
    android:paddingBottom="@dimen/dp15"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp90"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@drawable/item_forum_img_loading"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_content"
        app:layout_constraintTop_toBottomOf="@+id/img_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="0-9岁儿童的35个成长关键期1111111111111111111111111111111111111111"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/dp9"
        android:textSize="13sp"
        android:layout_marginTop="@dimen/dp11"
        android:textColor="@color/color_333333"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp7"
        tools:text="0-9岁儿童的35个成长关键期"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/color_999999"
        android:textSize="11sp"
        android:layout_marginTop="@dimen/dp9"
        tools:ignore="MissingConstraints,SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_up"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/dp7"
        tools:text="更新88节"
        android:textSize="9sp"
        android:textColor="@color/color_999999"
        android:layout_marginTop="@dimen/dp10"
        tools:ignore="MissingConstraints,SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_study"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp4"
        android:drawableStart="@mipmap/home_look"
        android:drawablePadding="@dimen/dp3"
        android:textColor="@color/color_999999"
        tools:text="899999"
        android:textSize="9sp"
        android:layout_marginTop="@dimen/dp10"
        tools:ignore="MissingConstraints,SmallSp" />

    <!--android:minWidth="50pt"
        android:minHeight="50pt"-->
    <com.like.LikeButton
        android:id="@+id/collection_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:circle_end_color="#F35C00"
        app:circle_start_color="#F35C00"
        app:dots_primary_color="#F35C00"
        app:dots_secondary_color="#F35C00"
        app:anim_scale_factor="1.5"
        app:icon_size="@dimen/dp22"
        app:icon_type="Star"
        app:is_enabled="true"
        app:layout_constraintTop_toTopOf="@+id/img_head"
        app:layout_constraintStart_toStartOf="@+id/img_head"
        app:like_drawable="@mipmap/maker_collection"
        app:liked="false"
        app:unlike_drawable="@mipmap/maker_nocolletion" />

</androidx.constraintlayout.widget.ConstraintLayout>
