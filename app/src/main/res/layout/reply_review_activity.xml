                    android:minLines="5"
                    android:padding="@dimen/my_px_40"
                    android:textColorHint="@color/text_gray_d8d8d8" />

                <TextView
                    android:id="@+id/mTvTextNum"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_px_80"
                    android:layout_gravity="right"
                    android:background="@color/white"
                    android:gravity="right"
                    android:minLines="3"
                    android:paddingRight="@dimen/my_px_40"
                    android:text="0/1000"
                    android:textSize="@dimen/my_sp_36" />

            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</layout>
