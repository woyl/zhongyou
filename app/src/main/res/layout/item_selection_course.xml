<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_video"
        android:layout_width="@dimen/dp146"
        android:layout_height="@dimen/dp85"
        android:scaleType="fitXY"
        tools:background="@drawable/item_forum_img_loading"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        app:layout_constraintStart_toEndOf="@+id/img_video"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/dp10"
        android:textColor="@color/color_333333"
        tools:text="00-发顺丰达范德萨发范德萨发fdsaf范德萨发"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_time"
        app:layout_constraintStart_toEndOf="@+id/img_video"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginStart="@dimen/dp10"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_999999"
        tools:text="课程时长：09:00"
        android:textSize="12sp"
        tools:ignore="MissingConstraints" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp19"
        app:layout_constraintTop_toBottomOf="@+id/img_video"
        android:background="@color/cf8f8f8"/>

    <RelativeLayout
        android:id="@+id/needBuyItemCourseLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/img_video"
        app:layout_constraintBottom_toBottomOf="@+id/img_video"
        app:layout_constraintStart_toStartOf="@+id/img_video"
        app:layout_constraintEnd_toEndOf="@+id/img_video"
        android:background="@drawable/maker_course_need_buy_cover"
        android:visibility="gone"
        tools:background="@drawable/maker_course_need_buy_cover"
        tools:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_buy5" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
