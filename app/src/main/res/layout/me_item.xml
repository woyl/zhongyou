<?xml version="1.0" encoding="utf-8"?>


<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:visibility="gone"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/mIvBack"
        tools:background="@color/bg_gray_909090"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_px_530"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/my_px_46"
        android:paddingLeft="@dimen/my_px_40"
        android:paddingRight="@dimen/my_px_40"
        android:paddingTop="@dimen/my_px_58">
        <!-- tools:background="@color/bg_gray_909090"-->



        <FrameLayout
            android:id="@+id/mLayoutHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mIvHead"
                tools:src="@color/green"
                android:layout_width="@dimen/my_px_460"
                android:layout_height="@dimen/my_px_426" />

             <ImageView
                 android:id="@+id/mIvGold"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                 android:layout_gravity="right|top"
                  android:src="@mipmap/ic_my_gold_medal"/>


        </FrameLayout>


         <ImageView
             android:id="@+id/mIvSetting"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
              android:src="@mipmap/btn_my_set"/>

        <TextView
            android:id="@+id/mTvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my_px_40"
            android:layout_marginTop="@dimen/my_px_20"
            android:layout_toRightOf="@+id/mLayoutHead"
            android:text="唐大山"
            android:textColor="@color/text_yellow_fff000"
            android:textSize="@dimen/my_sp_48"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mTvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_below="@+id/mTvName"
            android:layout_marginLeft="@dimen/my_px_40"
            android:layout_marginTop="@dimen/my_px_20"
            android:layout_toRightOf="@+id/mLayoutHead"
            android:drawableLeft="@mipmap/ic_address"
            android:drawablePadding="@dimen/my_px_10"
            android:gravity="center_vertical"
            android:text="北京市朝阳区"
            android:textColor="@color/white"
            android:textSize="@dimen/my_sp_36"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/mTvReviewRate"
            tools:text="评价率 99.00%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mTvAddress"
            android:layout_marginTop="@dimen/my_px_40"
            android:textColor="@color/text_yellow_fff000"
            android:textSize="@dimen/my_sp_36" />

        <TextView
            android:id="@+id/mTvReviewCount"
            tools:text="连线364次 评价126次"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mTvReviewRate"
            android:layout_marginTop="@dimen/my_px_15"
            android:textColor="@color/white"
            android:textSize="@dimen/my_sp_36" />

        <LinearLayout
            android:id="@+id/mLayoutStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/mTvReviewCount"
            android:layout_marginTop="@dimen/my_px_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mIvStar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_star_title" />

            <ImageView
                android:id="@+id/mIvStar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_star_title" />

            <ImageView
                android:id="@+id/mIvStar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_star_title" />

            <ImageView
                android:id="@+id/mIvStar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_star_title" />

            <ImageView
                android:id="@+id/mIvStar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_star_title" />

            <TextView
                android:id="@+id/mTvStar"
                tools:text="4.9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_px_15"
                android:textColor="@color/text_yellow_fff000"
                android:textSize="@dimen/my_sp_58"
                android:textStyle="bold" />


        </LinearLayout>





    </RelativeLayout>
</FrameLayout>