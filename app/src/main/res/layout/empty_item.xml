<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mLayoutNoData"
    android:layout_width="match_parent"
    android:layout_height="@dimen/my_px_800"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mIvNoData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:scaleType="center"
        android:src="@drawable/ic_home_record_none" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mIvNoData"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="暂时还没收到评价哦"
        android:textColor="@color/text_gray_909090"
        android:textSize="15sp" />

</RelativeLayout>