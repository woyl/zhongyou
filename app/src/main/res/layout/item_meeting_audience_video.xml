<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="114dp"
    android:layout_height="70dp"
    android:background="@drawable/shap_rantage_blue"
    android:padding="@dimen/my_px_3">

    <FrameLayout
        android:id="@+id/audience_video_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_666666" />

    <TextView
        android:id="@+id/chairManHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:text="等待主持人进入"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone" />

    <TextView
        android:layout_toLeftOf="@+id/label"
        android:id="@+id/videoStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="对方网络不好 视频播放失败"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right|top"
        android:background="@color/c_ff8600"
        android:padding="1dp"
        android:text="主持人"
        android:textColor="@color/white"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right|bottom"
        android:padding="1dp"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:textColor="@color/white"
        android:textSize="10sp"
        tools:text="张三丰" />

    <ImageView
        android:id="@+id/volume_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/ic_volume_status" />

</RelativeLayout>