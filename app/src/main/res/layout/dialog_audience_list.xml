<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_meeting_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/audience_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        android:gravity="center_horizontal"
        android:text="选择连麦人"
        android:textColor="@color/c_d8d8d8"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="580dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_talk_focused"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:focusable="true"
            android:background="@color/white"
            android:ellipsize="end"
            android:textSize="16sp"
            android:hint="输入关键词搜索"
            android:maxLines="1" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/bg_talk_focused_red"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="580dp"
        android:layout_height="wrap_content"
        android:dividerHeight="10dp"
        android:divider="@color/transparent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp" />

</LinearLayout>