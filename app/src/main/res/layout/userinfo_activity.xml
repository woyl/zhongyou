<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/base_tool_bar"/>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zhongyou.meet.mobile.view.CircleImageView
                android:id="@+id/imgUserInfoHead"
                android:layout_width="@dimen/my_px_360"
                android:layout_height="@dimen/my_px_360"
                android:layout_marginTop="@dimen/my_px_132"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tx"
               />

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/my_px_20"
                android:text="点击头像上传头像"
                android:textColor="@color/black"
                android:textSize="@dimen/my_sp_35"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgUserInfoHead" />

        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ico_name"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <EditText
                    android:background="@null"
                    android:id="@+id/edtUserInfoName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_px_156"
                    android:ems="10"
                    android:hint="姓名"
                    android:inputType="textPersonName"
                    android:paddingLeft="@dimen/my_px_92"
                    android:paddingTop="@dimen/my_px_32"
                    android:paddingBottom="@dimen/my_px_32"
                    android:textColor="@color/black"
                    android:textColorHint="@color/alertdialog_line"
                    android:theme="@style/WhiteEdittext" />
            </LinearLayout>
            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ico_class"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <EditText
                    android:background="@null"
                    android:textColorHint="@color/alertdialog_line"
                    android:id="@+id/edtUserInfoPostType"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_px_156"
                    android:layout_marginTop="0dp"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:hint="选择用户类型"
                    android:inputType="textPersonName"
                    android:paddingLeft="@dimen/my_px_92"
                    android:paddingTop="@dimen/my_px_32"
                    android:paddingBottom="@dimen/my_px_32"
                    android:theme="@style/WhiteEdittext"
                     />
            </LinearLayout>

            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ico_center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <EditText
                    android:textColorHint="@color/alertdialog_line"
                    android:background="@null"
                    android:id="@+id/edtUserInfoDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_px_156"
                    android:layout_marginTop="0dp"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:hint="选择中心"
                    android:inputType="textPersonName"
                    android:paddingStart="@dimen/my_px_92"
                    android:paddingLeft="@dimen/my_px_92"
                    android:paddingTop="@dimen/my_px_32"
                    android:paddingBottom="@dimen/my_px_32"
                    android:textColor="@color/black"
                    android:theme="@style/WhiteEdittext"
                  />
            </LinearLayout>

            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:id="@+id/userInfoGridLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/xzdz"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <EditText
                    android:textColorHint="@color/alertdialog_line"
                    android:background="@null"
                    android:id="@+id/edtUserInfoGrid"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_px_156"
                    android:layout_marginTop="0dp"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:hint="选择网格"
                    android:inputType="textPersonName"
                    android:paddingStart="@dimen/my_px_92"
                    android:paddingLeft="@dimen/my_px_92"
                    android:paddingTop="@dimen/my_px_32"
                    android:paddingBottom="@dimen/my_px_32"
                    android:textColor="@color/black"
                    android:theme="@style/WhiteEdittext"
                    />
            </LinearLayout>

            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


            <LinearLayout
                android:id="@+id/UserInfoCustomLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ico_kehu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <EditText
                    android:textColorHint="@color/alertdialog_line"
                    android:id="@+id/edtUserInfoCustom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_px_156"
                    android:layout_marginTop="0dp"
                    android:background="@null"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:hint="选择客户"
                    android:inputType="textPersonName"
                    android:paddingLeft="@dimen/my_px_92"
                    android:paddingTop="@dimen/my_px_32"
                    android:paddingBottom="@dimen/my_px_32"
                    android:textColor="@color/black"
                    android:theme="@style/WhiteEdittext" />

            </LinearLayout>

            <View
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="#ccc"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/xzdz"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <EditText
                    android:textColorHint="@color/alertdialog_line"
                    android:background="@null"
                    android:id="@+id/edtUserInfoAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_px_156"
                    android:layout_marginTop="0dp"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:hint="选择地址"
                    android:inputType="textPersonName"
                    android:paddingLeft="@dimen/my_px_92"
                    android:paddingTop="@dimen/my_px_32"
                    android:paddingBottom="@dimen/my_px_32"
                    android:textColor="@color/black"
                    android:theme="@style/WhiteEdittext"
                   />

            </LinearLayout>

        </LinearLayout>

            <Button
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:id="@+id/btnUserInfoSave"
                android:layout_width="@dimen/my_px_648"
                android:layout_height="@dimen/my_px_115"
                android:background="@drawable/drawable_login"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/my_px_43"
                />
        </LinearLayout>


    </ScrollView>
    </LinearLayout>
</layout>