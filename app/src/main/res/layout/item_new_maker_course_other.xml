<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_head"
        android:layout_width="300pt"
        android:layout_height="152pt"
        android:scaleType="fitXY"
        tools:background="@drawable/item_forum_img_loading"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        app:layout_constraintStart_toEndOf="@+id/img_head"
        app:layout_constraintTop_toTopOf="@+id/img_head"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5"
        android:singleLine="true"
        android:ellipsize="end"
        android:textStyle="bold"
        tools:text = "情绪管理与压力调试"
        android:textColor="@color/color_333333"
        android:textSize="14sp"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        app:layout_constraintStart_toEndOf="@+id/img_head"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintBottom_toTopOf="@+id/tv_content"
        android:layout_marginStart="@dimen/dp5"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/color_333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        tools:text = "小明  中国数码讲师"
        tools:ignore="MissingConstraints,SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_content"
        app:layout_constraintStart_toEndOf="@+id/img_head"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        app:layout_constraintBottom_toTopOf="@+id/tv_study"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp5"
        android:textColor="@color/color_999999"
        android:textSize="11sp"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text = "幼师心里健康应该得好快速调整范德萨发对方是否范德萨发发多少范德萨范德萨发范德萨发范德萨发发多少发多少但是发多少 方式发多少的是"
        tools:ignore="MissingConstraints,SmallSp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_up"
        app:layout_constraintStart_toEndOf="@+id/img_head"
        app:layout_constraintBottom_toBottomOf="@+id/img_head"
        android:layout_marginStart="@dimen/dp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "更新6节"
        android:textColor="@color/color_999999"
        android:textSize="9sp"
        tools:ignore="MissingConstraints,SmallSp" />

<!--    android:drawableStart="@mipmap/home_look"-->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_study"
        app:layout_constraintBottom_toBottomOf="@+id/img_head"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/dp3"
        android:drawableStart="@mipmap/home_look"
        android:textColor="@color/color_999999"
        android:textSize="9sp"
        tools:text = "44444"
        tools:ignore="MissingConstraints,SmallSp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_up"
        android:layout_marginTop="@dimen/dp16"
        android:layout_marginStart="@dimen/dp20"
        android:layout_marginEnd="@dimen/dp19"
        android:background="@color/cf8f8f8"/>


<!--     android:minWidth="50pt"
        android:minHeight="50pt"-->
    <com.like.LikeButton
        android:id="@+id/collection_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:anim_scale_factor="1.5"
        app:circle_end_color="#F35C00"
        app:circle_start_color="#F35C00"
        app:dots_primary_color="#F35C00"
        app:dots_secondary_color="#F35C00"
        app:icon_size="22dp"
        app:icon_type="Star"
        app:is_enabled="true"
        app:layout_constraintTop_toTopOf="@+id/img_head"
        app:layout_constraintStart_toStartOf="@+id/img_head"
        app:like_drawable="@mipmap/maker_collection"
        app:liked="false"
        app:unlike_drawable="@mipmap/maker_nocolletion" />



</androidx.constraintlayout.widget.ConstraintLayout>
