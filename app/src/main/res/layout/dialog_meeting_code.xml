<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/my_px_953"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radius_dialog"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/my_px_43"
        android:text="请输入加入码"
        android:textColor="@color/black"
        android:textSize="@dimen/my_sp_46"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/code"
        android:layout_width="@dimen/my_px_821"
        android:layout_height="@dimen/my_px_115"
        android:layout_marginStart="@dimen/my_px_66"
        android:layout_marginLeft="@dimen/my_px_66"
        android:layout_marginTop="@dimen/my_px_45"
        android:layout_marginEnd="@dimen/my_px_66"
        android:layout_marginRight="@dimen/my_px_66"
        android:background="@drawable/bg_radius_edittext"
        android:focusable="true"
        android:inputType="number"
        android:paddingLeft="@dimen/my_px_32"
        android:paddingTop="@dimen/my_px_24"
        android:paddingRight="@dimen/my_px_32"
        android:paddingBottom="@dimen/my_px_26"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/dialog_meeting_warnning"
        android:layout_width="@dimen/my_px_29"
        android:layout_height="@dimen/my_px_29"
        android:layout_marginTop="@dimen/my_px_52"
        android:src="@drawable/dialog_red_warnning"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@+id/code"
        app:layout_constraintTop_toBottomOf="@+id/code" />

    <TextView
        android:id="@+id/dialog_meeting_warnning_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/my_px_40"
        android:layout_marginLeft="@dimen/my_px_40"
        android:layout_marginTop="@dimen/my_px_43"
        android:text="将要开启实况模式，将实时拍摄您的参会场景并上传至主持人端"
        android:textColor="@color/c_f62c64"
        android:textSize="@dimen/my_sp_35"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/code"
        app:layout_constraintStart_toStartOf="@+id/code"
        app:layout_constraintTop_toBottomOf="@+id/code" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="@dimen/my_px_259"
        android:layout_height="@dimen/my_px_101"
        android:layout_marginStart="@dimen/my_px_115"
        android:layout_marginLeft="@dimen/my_px_115"
        android:layout_marginTop="@dimen/my_px_72"
        android:layout_marginBottom="@dimen/my_px_86"
        android:background="@drawable/bg_button_dialog_selector"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="@dimen/my_sp_43"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/code"
        app:layout_constraintTop_toBottomOf="@+id/dialog_meeting_warnning_text"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="@dimen/my_px_259"
        android:layout_height="@dimen/my_px_101"
        android:layout_marginStart="@dimen/my_px_72"
        android:layout_marginLeft="@dimen/my_px_72"
        android:layout_marginTop="@dimen/my_px_72"
        android:layout_marginEnd="@dimen/my_px_115"
        android:layout_marginRight="@dimen/my_px_115"
        android:layout_marginBottom="@dimen/my_px_86"
        android:background="@drawable/bg_button_dialog_selector"
        android:text="@string/sure"
        android:textColor="@color/white"
        android:textSize="@dimen/my_sp_43"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/code"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/dialog_meeting_warnning_text"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>