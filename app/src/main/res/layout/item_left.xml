<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/my_px_28"
        android:layout_marginBottom="@dimen/my_px_28"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            android:id="@+id/mIvHead"
            android:layout_width="@dimen/my_px_95"
            android:layout_height="@dimen/my_px_95"
            android:src="@mipmap/baby_default_avatar"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#909090"
                android:textSize="@dimen/my_px_35"
                android:layout_marginLeft="@dimen/my_px_22"
                android:text="玫瑰"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/chat_mes_left_bg"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="@dimen/my_px_20"
                    android:textSize="@dimen/my_px_40"
                    android:maxEms="15"
                    android:textColor="#0b0b0b"
                    android:layout_marginLeft="@dimen/my_px_22"
                    android:padding="7dp"
                    android:text="我在说。。。。"/>
                <ImageView
                    android:id="@+id/img_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/my_px_40"
                    android:layout_marginLeft="@dimen/my_px_7"
                    android:background="@mipmap/chat_arrow_left"
                    />
            </RelativeLayout>

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/loading"
                android:id="@+id/img_pic"
                android:layout_width="@dimen/my_px_500"
                android:layout_height="@dimen/my_px_320"
                android:layout_gravity="right"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="@dimen/my_px_22"
                android:layout_marginTop="@dimen/my_px_12"
                 />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>