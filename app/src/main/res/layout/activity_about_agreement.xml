<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".mvp.ui.activity.AboutAgreementActivity">

    <include layout="@layout/base_tool_bar_k"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/dp150"
        android:background="@drawable/l_logo"/>

    <com.allen.library.SuperButton
        android:id="@+id/user_agreement"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp45"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginBottom="@dimen/dp30"
        android:layout_marginStart="@dimen/dp100"
        android:layout_marginEnd="@dimen/dp100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_1"
        android:text="用户服务协议"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:sCornersRadius="10dp"
        app:sSelectorNormalColor="@color/agora_blue"
        app:sSelectorPressedColor="@color/c_172938"
        app:sSolidColor="@color/agora_blue"
        app:sUseSelector="true" />


    <com.allen.library.SuperButton
        android:id="@+id/privacy_agreement"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp45"
        android:layout_marginTop="@dimen/dp30"
        android:layout_marginBottom="@dimen/dp30"
        android:layout_marginStart="@dimen/dp100"
        android:layout_marginEnd="@dimen/dp100"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_agreement"
        android:text="隐私政策"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:sCornersRadius="10dp"
        app:sSelectorNormalColor="@color/agora_blue"
        app:sSelectorPressedColor="@color/c_172938"
        app:sSolidColor="@color/agora_blue"
        app:sUseSelector="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/dp20"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Copyright @ zhongyouie2019"/>

</androidx.constraintlayout.widget.ConstraintLayout>