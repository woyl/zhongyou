<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/my_px_40"
    android:paddingBottom="@dimen/my_px_40"
    >


    <TextView
        android:id="@+id/mTvHistory"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="以下是历史记录"
        android:layout_marginTop="@dimen/my_px_20"
        android:layout_marginBottom="@dimen/my_px_40"
        android:textColor="@color/text_gray_909090"
        android:textSize="@dimen/my_sp_36" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">




        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mIvHead"
            android:layout_width="@dimen/my_px_120"
            android:layout_height="@dimen/my_px_120"
            android:layout_gravity="center"
            android:src="@mipmap/baby_default_avatar"

            />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my_px_20"
            android:layout_weight="1">

            <TextView
                android:id="@+id/mTvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="北京万达店 唐大山"
                android:textColor="@color/purple_811fcd"
                android:textSize="@dimen/my_sp_42" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mTvName"
                android:layout_marginTop="@dimen/my_px_20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mTvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray_909090"
                    android:textSize="@dimen/my_sp_36"
                    tools:text="今天 22:00" />


                <TextView
                    android:id="@+id/mTvNoReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mTvName"
                    android:layout_marginLeft="@dimen/my_px_20"
                    android:text="未评价"
                    android:textColor="@color/text_gray_d8d8d8"
                    android:textSize="@dimen/my_sp_36"
                    android:visibility="gone" />


                <LinearLayout
                    android:id="@+id/mLayoutStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/my_px_20"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mIvStar1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_star_good_record" />

                    <ImageView
                        android:id="@+id/mIvStar2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_px_5"
                        android:src="@mipmap/ic_star_good_record" />

                    <ImageView
                        android:id="@+id/mIvStar3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_px_5"
                        android:src="@mipmap/ic_star_good_record" />

                    <ImageView
                        android:id="@+id/mIvStar4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_px_5"
                        android:src="@mipmap/ic_star_good_record" />

                    <ImageView
                        android:id="@+id/mIvStar5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/my_px_5"
                        android:src="@mipmap/ic_star_good_record" />


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>


        <TextView
            android:id="@+id/mTvCallDuration"
            android:layout_width="@dimen/my_px_230"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_call"
            android:drawablePadding="@dimen/my_px_15"
            android:textColor="@color/text_black_434343"
            android:singleLine="true"
            android:textStyle="bold"
            android:textSize="@dimen/my_sp_48"
            android:gravity="right"
            tools:text="000:32" />
        <!--tools:text="000:32"-->



    </LinearLayout>


</LinearLayout>