<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/black_corner"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/copy"
            android:layout_width="@dimen/my_px_221"
            android:layout_height="@dimen/my_px_98"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="复制"
            android:textSize="@dimen/my_px_36" />
        <ImageView
            android:id="@+id/min"
            android:layout_width="@dimen/my_px_2"
            android:layout_height="@dimen/my_px_98"
            android:background="#ffffff"/>

        <TextView
            android:id="@+id/del"
            android:layout_width="@dimen/my_px_221"
            android:layout_height="@dimen/my_px_98"
            android:padding="10dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="撤回"
            android:textSize="@dimen/my_px_36" />

    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/my_px_65"
        android:background="@mipmap/black_tri"/>

</LinearLayout>